package examples

import (
	"github.com/invopop/popui.go"
	"github.com/invopop/popui.go/props"
)

templ ButtonAnchorExample() {
	@popui.ButtonGroup() {
		@popui.Button(props.Button{
			Variant: props.ButtonVariantPrimary,
			Href:    "/docs",
		}) {
			Visit Website
		}
		@popui.Button(props.Button{
			Variant: props.ButtonVariantSecondary,
			Href:    "/docs",
			Target:  "_blank",
		}) {
			Open in New Tab
		}
	}
}
