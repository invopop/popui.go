package popui

import (
	"github.com/invopop/popui.go/icons"
	"github.com/invopop/popui.go/props"
	"github.com/invopop/popui.go/tailwind"
)

// Page prepares the layout of a single page application.
// Deprecated: use App and related components instead.
templ Page(opts ...props.Page) {
	{{ p := props.First(opts) }}
	<main
		if p.ID != "" {
			id={ p.ID }
		}
		class={
			tailwind.Merge(
				"flex-1 bg-background overflow-y-auto",
				p.Class,
			),
		}
		{ p.Attributes... }
	>
		{ children... }
	</main>
}

templ PageContainer(opts ...props.PageContainer) {
	{{ p := props.First(opts) }}
